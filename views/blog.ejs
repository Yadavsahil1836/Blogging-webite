<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>blog</title>
</head>
<body>

    <%- include('./partials/nav') %>
    <div class="container mt-3">
        <h1><%= blog.title %></h1>
        <div class="container mt-3 text-center">
            <img src="<%= blog.coverImageUrl %>" width="500px">
            <pre class="mt-3"><%= blog.body %></pre>
        </div>
    </div>
    <div>
    <div class="container mt-3 p-3 border rounded shadow-sm" style="max-width: 400px; background-color: #f9f9f9;">
        <div class="d-block">
            <img src="<%= blog.createdBy.profilepic %>" alt="Profile Picture" width="80" class="rounded-circle mb-3" style="float: left; margin-right: 15px;">
            <div style="overflow: hidden;">
                <h5 class="mb-1" style="font-weight: 600;"><%= blog.createdBy.fullName %></h5>
                <p class="mb-0 text-muted">Email: <%= blog.createdBy.email %></p>
                <p class="text-muted" style="font-size: 0.9em;">Role: <%= blog.createdBy.role %></p>
            </div>
        </div>
    </div>
</div>

    <div class="container mt-3">
        <h1>comment (<%= comments.length %>)</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="container mt-3">
                    <textarea class="form-control" id="content" name="content" style="height: 100px"></textarea>
                    <button class="btn btn-sm btn-primary mt-2">Add</button>
    
                </div>
            </form>
        <% } %>
    </div>



    <div class="mt-3">
        <% comments.forEach(comment => { %>
            <div class="container mt-3 p-3 border rounded shadow-sm" style="width: 84%; background-color: #f9f9f9;">
                <img src="<%= comment.createdBy.profilepic %>" alt="Profile Picture" width="50px" class="rounded-circle" style="float: left; margin-right: 15px;">                
                <div style="float: left;">
                    <span style="font-weight: bold; display: block;"><%= comment.createdBy.fullName %></span>                    
                    <div style="margin-top: 5px;">
                        <%= comment.content %>
                    </div>
                </div>
                <div style="clear: both;"></div>
            </div>
        <% }) %>
    </div>
    

    
    
    

  
    <%- include('./partials/scripts')  %>
    
</body>
</html>